{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center my-4">Liste des Livres</h1>

    <div class="container">
   
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Titre</th>
                    <th>Éditeur</th>
                    <th>Date d'Édition</th>
                    <th>Prix</th>
                    <th colspan="3">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for livre in livres %}
                    <tr>
                        <td>{{ livre.titre }}</td>
                        <td>{{ livre.editeur }}</td>
                        <td>{{ livre.dateEdition | date('D-M-Y') }}</td>
                        <td>{{ livre.prix}}</td>  
                        <td>
                            <a href="/admin/livres/update/{{livre.id}}" class="btn btn-success">modifier</a>
                        </td>
                        <td>
                            <a href="/admin/livres/delete/{{livre.id}}" class="btn btn-danger">supprimer</a>
                        </td>
                        <td>
                            <a href="/admin/livres/show/{{livre.id}}" class="btn btn-info">voir détails</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
    {{ knp_pagination_render(livres) }}
</div>
    </div>
{% endblock %}
